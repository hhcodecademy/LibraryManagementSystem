@{
    ViewData["Title"] = "Index";
}
@model List<BookVM>
﻿
<div class="row justify-content-end">
    <div class="col-4 d-flex justify-content-end">
        @Html.ActionLink("Add", "Create", "Books", null, new { @class = "btn btn-primary" })
    </div>
</div>
<div class="row">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Image</th>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Author</th>
                <th scope="col">Publish Date</th>
                <th scope="col">Description</th>
                <th scope="col">Operation</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <th><img width="150px" height="100px" src="@Url.Content($"~/{item.Thumbnail}")" alt="Alternate Text" /></th>
                    <td>@item.Name</td>
                    <td>@item.CategoryName</td>
                    <td>@item.AuthorName</td>
                    <td>@item.PublishDate</td>
                    <td>@item.Description</td>
                    <td>
                        <a class="btn btn-warning" asp-controller="Books" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="far fa-pen-to-square"></i>

                        </a>
                        <a class="btn btn-danger" asp-controller="Books" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash-can"></i>
                        </a>
  
                    </td>
                </tr>
            }


        </tbody>
    </table>
</div>


