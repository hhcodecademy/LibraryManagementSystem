@model List<LibraryManagementSystem.DAL.Models.Book>
<h1>Favorite</h1>
<div class="container">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="card col-4 mb-5" style="width: 18rem;">
                <img class="card-img-top" src="@Url.Content($"~/{item.Thumbnail}")" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"></li>
                </ul>
                <div class="card-body">
                    <a asp-controller="Books" asp-action="AddToFavorites" asp-route-bookId="@item.Id" class="card-link">Add To Favorites</a>
                </div>
            </div>

        }

    </div>
</div>